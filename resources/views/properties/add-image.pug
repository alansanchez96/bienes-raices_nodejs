extends ../layout/admin

block styles
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.3/dropzone.css")

block content
    .py-10
        h1.text-center.text-4xl.my-10.font-extrabold Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= title

        div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10")
            form.space-y-8(class="dropzone border-dashed border-2 w-full min:h-96 h-auto rounded flex-col justify-center items-center" method="post" action="/properties/add-image")
                input(type="hidden" name="_csrf" value= csrfToken)


            button(class="w-full py-3 bg-indigo-600 hover:bg-indigo-700 rounded text-white font-bold uppercase cursor-pointer") Post property

block scripts
    script(src="/js/addImage.js")