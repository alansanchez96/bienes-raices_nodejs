extends ../layout/index

block content
    .py-10
        h1.text-center.text-4xl.my-10.font-extrabold Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= title

        if errors
            div(class="max-w-md mx-auto my-10")
                each error in errors
                    p.text-red-600.font-bold.uppercase.text-xs.text-center.p-1= error.msg

        .mt-8.mx-auto.max-w-lg
            .bg-white.py-8.px-6.shadow
                form(method="POST" action="/register")
                    input(name="_csrf" value= csrfToken type="hidden")
                    div(class="flex flex-wrap -mx-3")
                        div(class="w-full md:w-1/2 px-3 mb-6")
                            label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="name") Name
                            input#name.w-full.py-2.px-3.border.border-gray-300.placeholder-gray-400(placeholder="John" name="name" type="text" value= user ? user.name : '')
                        div(class="w-full md:w-1/2 px-3 mb-6")
                            label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="lastname") Lastname
                            input#lastname.w-full.py-2.px-3.border.border-gray-300.placeholder-gray-400(placeholder="Doe" name="lastname" type="text" value= user ? user.lastname : '')
                    div.mb-6
                        label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="email") Email
                        input#email.w-full.py-2.px-3.border.border-gray-300.placeholder-gray-400(placeholder="Johndoe@company.com" name="email" type="email" value= user ? user.email : '')
                    div.mb-6
                        label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="password") Password
                        input#password.w-full.py-2.px-3.border.border-gray-300.placeholder-gray-400(placeholder="Password" name="password" type="password")
                    div.mb-6
                        label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="password_confirmation") Repeat Password
                        input#password_confirmation.w-full.py-2.px-3.border.border-gray-300.placeholder-gray-400(placeholder="Repeat password" name="password_confirmation" type="password")
                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Submit")
                    .flex.items-center.justify-between.mt-5
                        a.text-gray-500.text-xs(href="/login") Are you already registered? Log In
                        a.text-gray-500.text-xs(href="/forgot-password") Forgot your password? 