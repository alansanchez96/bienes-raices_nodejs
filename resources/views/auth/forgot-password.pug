extends ../layout/index

block content
    .py-10
        h1.text-center.text-4xl.my-10.font-extrabold Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= title

        if errors
            div(class="max-w-md mx-auto my-10")
                each error in errors
                    p.text-red-600.font-bold.uppercase.text-xs.text-center.p-1= error.msg

        .mt-8.mx-auto.max-w-lg
            .bg-white.py-8.px-6.shadow
                form(action="/forgot-password" method="POST")
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div.mb-6
                        label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="email") Email
                        input#email.w-full.py-2.px-3.border.border-gray-300.placeholder-gray-400(placeholder="Enter your email" name="email" type="email")
                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold uppercase text-sm py-3 cursor-pointer" type="submit" value="Submit")
                    .flex.items-center.justify-between.mt-5
                        a.text-gray-500.text-xs(href="/register") Do not you have an account yet? Sign up
                        a.text-gray-500.text-xs(href="/login") Are you already registered? Log In