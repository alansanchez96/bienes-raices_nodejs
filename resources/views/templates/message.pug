extends ../layout/index

block content
    .py-10
        h1.text-center.text-4xl.my-10.font-extrabold Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= title

        .mt-8.mx-auto.max-w-lg
            .bg-white.py-8.px-6.shadow
                if error
                    p.text-xl.font-bold.text-center.my-10.text-red-600= error
                else 
                    p.text-xl.font-bold.text-center.my-10.text-green-600= message

                if confirm
                    .mx-auto.text-center.my-10
                        a(href="/login" class="w-100 block text-center font-bold text-white my-10 uppercase text-sm px-5 py-3 bg-indigo-600 hover:bg-indigo-700") login